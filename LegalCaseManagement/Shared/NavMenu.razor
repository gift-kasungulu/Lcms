<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Legal Case Management</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>
+<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <AuthorizeView Roles=" Admin">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="counter">
                        <i class="bi bi-people-fill"></i> Users
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>
        <AuthorizeView Roles=" Admin">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="advocates">
                        <i class="bi bi-mortarboard-fill"></i> Advocates
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>

        <AuthorizeView Roles="Client, Admin, Team">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="fetchdata">
                        <i class="bi bi-chat-fill"></i> Appointments
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>
        <AuthorizeView Roles="Client, Team, Admin">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="case">
                        <i class="bi bi-hammer"></i> Case
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>
        <AuthorizeView Roles="Team, Admin">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="earnings">
                        <i class="bi bi-wallet-fill"></i> Eanings
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>
        <AuthorizeView Roles="Team, Admin">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="settings">
                        <i class="bi bi-gear-fill"></i> Settings
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
